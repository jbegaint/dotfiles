#!/bin/zsh

alias pacback="pacman -Qqne > ~/Documents/installed_packages.txt"
alias pong="ping -c3 google.com"
alias reload="source ~/.zsh/.zshrc"

alias temp="sensors"

alias grep="grep --color=auto"
alias ll="ls -l"
alias ls="ls -F --color"
alias pacman="pacman --color=auto"

alias head1="head -n1"
alias tail1="tail -n1"
#alias skype='xhost +local: && su skype -c skype'

# tip found on arch bbs
alias install_date="echo $(ls -lct /etc | tail -1 | awk '{print $6, $7, $8}')"
alias dfc="dfc -p/dev"
alias cal="cal -m -3"

alias keychain_start='eval `keychain --eval --agents ssh id_rsa`'
alias btsync='btsync --config ~/.config/btsync/btsync.conf'
alias cpv="rsync -poghb --backup-dir=/tmp/rsync -e /dev/null --progress --"

alias uncaps="xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape'"

lsc () {
	ls "$@" | wc -l
}

mkcd () {
	mkdir -p $@
	cd $_;
}

extract() {
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xvjf $1    ;;
			*.tar.gz)    tar xvzf $1    ;;
			*.tar.xz)    tar xvJf $1    ;;
			*.bz2)       bunzip2 $1     ;;
			*.rar)       unrar x $1     ;;
			*.gz)        gunzip $1      ;;
			*.tar)       tar xvf $1     ;;
			*.tbz2)      tar xvjf $1    ;;
			*.tgz)       tar xvzf $1    ;;
			*.zip)       unzip $1       ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1        ;;
			*.xz)        unxz $1        ;;
			*.exe)       cabextract $1  ;;
			*)           echo "\`$1': unrecognized file compression";;
		esac
	else
		echo "\`$1' is not a valid file"
	fi
}

alias fuck='eval $(thefuck $(fc -ln -1 | tail -n 1)); fc -R'
alias FUCK='fuck'
alias vim='nvim'
alias ncmpcpp='[[ -z $(pidof mpd) ]] && mpd; ncmpcpp'
alias lock='i3lock -i <(import -window root - | convert -blur -1x5 - png:-)'
