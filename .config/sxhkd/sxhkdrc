#
# bspwm hotkeys
#

super + alt + Escape
    bspc quit

super + q
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + apostrophe
    bspc window -s last

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

# select/move window
super + {_,shift + }{Left,Down,Up,Right}
    bspc window -{f,s} {left,down,up,right}

# preselect split and cancel
super + ctrl + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}
super + ctrl + c
    bspc window -p cancel

# push/pull
super + alt + {Left,Down,Up,Right}
    bspc window -e {left,down,up,right} push

super + alt + shift + {Left,Down,Up,Right}
    bspc window -e {right,up,down,left} pull

super + {_,shift + } + c
    bspc window -f {next,prev}

# desktop next/ right
ctrl + alt + {Left, Right}
    bspc desktop -f {prev,next}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}


super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i



# Focus or move window to desktops
#super + {_,shift + }{1-9,0}
#    bspc {desktop -f,window -d} {1-9,0}

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

super + Return
    gnome-terminal

super + d
    dmenu_run -i -sb '#4A6787' -l '3'

# Circulate leaves of tree
alt + {comma,period}
    bspc desktop -F {horizontal,vertical}

# Volume management shortcuts
super + {_, shift + }v
    amixer set Master 5%{+,-}
super + p
    amixer set Master toggle

XF86AudioRaiseVolume
    amixer set Master 5%+ -q

XF86AudioLowerVolume   
    amixer set Master 5%- -q

XF86AudioMute 
    amixer set Master toggle -q

# MPD 
XF86AudioPlay
    mpc toggle
XF86AudioNext
    mpc next
XF86AudioPrev
    mpc prev

# Lock
ctrl + alt + l
    xtrlock

super + l
    i3lock -u -i ~/.walls/lock.png

Print
    scrot -q 100 -e 'mv $f ~/Pictures/Screenshots'

super + n
    xdotool search --onlyvisible --classname scratchpad windowunmap || xdotool search --classname scratchpad windowmap || urxvt -name scratchpad -g 80x25

super + i
    notify-send mpc "$(mpc status)"